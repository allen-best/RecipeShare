<main class="container">
    <h1 class="main-text">{{title}}</h1>
    <div class="row">
        <div class="col-sm-12">
            <div class="form-container">
                <form id="recipeForm">
                    <div class="form-group">
                        <label id="formLabel" for="name_input">Name:</label>
                        <input type="text" class="form-control" id="name_input" name="name_input" placeholder="Name of Recipe">
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type_input" id="foodOption" value="food">
                        <label class="form-check-label" for="foodOption">Food</label>
                    </div>
                    <div class="form-check form-check-inline">
                        <input class="form-check-input" type="radio" name="type_input" id="drinkOption" value="drink">
                        <label class="form-check-label" for="drinkOption">Drink</label>
                    </div>
                    <div class="form-group">
                        <label id="formLabel" for="ingedients_input">Ingredients:</label>
                        <textarea class="form-control" id="ingedients_input" rows="3"></textarea>
                    </div>
                    <div class="form-group">
                        <label id="formLabel" for="step_1_input">Step 1:</label>
                        <textarea class="form-control" id="step_1_input" rows="2"></textarea>
                    </div>
                    <div class="form-group">
                        <label id="formLabel" for="step_2_input">Step 2:</label>
                        <textarea class="form-control" id="step_2_input" rows="2"></textarea>
                    </div>
                    <div class="form-group">
                        <label id="formLabel" for="step_3_input">Step 3:</label>
                        <textarea class="form-control" id="step_3_input" rows="2"></textarea>
                    </div>
                    <div class="form-group">
                        <label id="formLabel" for="search_term">Prepare time(minutes):</label>
                        <input type="number" class="form-control" id="prepare_time_input" name="cook_time_input" placeholder="5">
                    </div>
                    <div class="form-group">
                        <label id="formLabel" for="cook_time_input">Cook time(minutes):</label>
                        <input type="number" class="form-control" id="cook_time_input" name="cook_time_input" placeholder="5">
                    </div>
                    <div class="form-group">
                        <label for="servings">Servings:</label>
                        <select class="form-control" id="servings">
                            <option>1</option>
                            <option>2</option>
                            <option>3</option>
                            <option>4</option>
                            <option>5</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <button type="submit" class="btn btn-default">Submit</button>
                    </div>
                </form>

                <div id="errorMsg" class="error"></div>

                <a id="homeLink" href="/">Back to main page</a>
            </div>
        </div>
    </div>
</main>